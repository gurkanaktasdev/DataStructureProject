@{
    ViewData["Title"] = "Graph Ağ Simülasyonu";
}

<style>
    body {
    background: linear-gradient(135deg, #f0f4f8, #dfe8f1);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
    padding: 0;
    }

    @@keyframes gradientShift {
    0% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
    }

    .card {
    background-color: rgba(255, 255, 255, 0.92);
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    color: #222;
    }

    h1 {
    color: #1a1a1a;
    }

    .custom-bold {
    color: #2b2b2b;
    }

    .btn-success {
    background-color: #4caf50;
    border: none;
    }

    .btn-success:hover {
    background-color: #43a047;
    }

    .btn-danger {
    background-color: #e53935;
    border: none;
    }

    .btn-danger:hover {
    background-color: #d32f2f;
    }

    #cy {
    background-color: #ffffff;
    border: 2px solid #ccc;
    border-radius: 10px;
    }
</style>


<h1>Graph Ağ Simülasyonu</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <input class="form-check-input" type="checkbox" id="directedGraph" />
                <label for="directedGraph" class="form-check-label custom-bold">Yönlü Graf</label>
                <p id="result" style="margin-top: 20px; font-weight: bold;"></p>
                <div class="shortcut-hint" style="background: linear-gradient(135deg, #ffffffcc, #d9eaf3cc); color: #333; border-radius: 15px; padding: 15px 20px; box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15); font-weight: 500; margin-bottom: 20px;">
    ⌨️          <strong>Klavye Kısayolları:</strong>
                <span style="margin-left: 10px;"><kbd style="background: #333; color: white; padding: 3px 7px; border-radius: 5px;">N</kbd> düğüm sil</span>
                <span style="margin-left: 15px;"><kbd style="background: #333; color: white; padding: 3px 7px; border-radius: 5px;">E</kbd> kenar sil</span>
                </div>

                <div id="cy" style="width: 100%; height: 500px; margin-top: 20px;"></div>

                <button type="button" class="btn btn-success mt-3" id="sendGraphBtn" onclick="sendGraphToServer()">İşlemi
                    Başlat</button>
                <button type="button" class="btn btn-danger mt-3" onclick="cleanTheElements()">Temizle</button>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <p class="fw-bold">Dijkstra algoritmasını çalıştırmak için bir başlangıç düğümü seçiniz.</p>
                <select id="myStartNodeDjkstra" class="form-select form-select-sm mb-3">
                    <option disabled selected>Bir düğüm seçin</option>
                </select>
                <div id="dijkstraSonuc" class="fw-bold">

                </div>
            </div>
            <div class="card mt-5">
                <p class="fw-bold">Prim algoritmasını çalıştırmak için bir başlangıç düğümü seçiniz.</p>
                <select id="myStartNodePrim" class="form-select form-select-sm mb-3">
                    <option disabled selected>Bir düğüm seçin</option>
                </select>
                <div id="primSonuc" class="fw-bold">

                </div>
            </div>
            <div class="card mt-5">
                <label for="kruskalAlgoritma" class="form-check-label custom-bold" style="display: inline-block;">Kruskal Algoritması</label>
                <input class="form-check-input" style="display: inline-block;" type="checkbox" id="kruskalAlgoritma" />
                <div id="kruskalSonuc" class="fw-bold">

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/cytoscape@3.24.0/dist/cytoscape.min.js"></script>
    <script src="~/js/graph.js"></script>
}