<section class="quiz-intro-box">
  <div class="container">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h3>Hangi algoritma size uygun?</h3>
        <p>Graf yapınıza en uygun algoritmayı birkaç soruda öğrenin.</p>
        <button id="startQuizBtn" class="btn btn-primary">Testi Başlat</button>
      </div>
    </div>

    <div id="quizForm">
      <form id="algorithmQuiz">
        <div class="mb-3">
          <label>1. Graf yönlü mü?</label>
          <select name="q1" class="form-select">
            <option value="yes">Evet</option>
            <option value="no">Hayır</option>
          </select>
        </div>

        <div class="mb-3">
          <label>2. Negatif kenar ağırlıkları olabilir mi?</label>
          <select name="q2" class="form-select">
            <option value="yes">Evet</option>
            <option value="no">Hayır</option>
          </select>
        </div>

        <div class="mb-3">
          <label>3. Amacınız en kısa yolu bulmak mı yoksa minimum ağ mı oluşturmak?</label>
          <select name="q3" class="form-select">
            <option value="shortest">En kısa yol</option>
            <option value="mst">Minimum Spanning Tree (MST)</option>
          </select>
        </div>

        <div class="mb-3">
          <label>4. Graf yoğun mu? (çok kenarlı)</label>
          <select name="q4" class="form-select">
            <option value="yes">Evet</option>
            <option value="no">Hayır</option>
          </select>
        </div>

        <div class="mb-3">
          <label>5. Sıralama gerektiren kenar işlemleri var mı?</label>
          <select name="q5" class="form-select">
            <option value="yes">Evet</option>
            <option value="no">Hayır</option>
          </select>
        </div>

        <button type="submit" class="btn btn-success">Algoritmayı Öner</button>
      </form>

      <div id="resultBox" style="display:none;" class="alert alert-info">
        <h4>Önerilen Algoritma: <span id="recommendedAlgo"></span></h4>
        <p id="algoExplanation"></p>
      </div>

      <div id="noMatchBox" style="display:none;" class="alert alert-warning">
        <h5>Sonuç Bulunamadı</h5>
        <p>Verdiğiniz cevaplara tam uyan bir algoritma öneremiyoruz. Lütfen farklı bir kombinasyon deneyin veya algoritmalar sekmesini inceleyin.</p>
        <a href="#algorithmTabs" class="btn btn-outline-primary mt-2">Algoritmaları İncele</a>
      </div>
    </div>
  </div>
</section>

<script>
  const startBtn = document.getElementById('startQuizBtn');
  const form = document.getElementById('quizForm');

  startBtn.addEventListener('click', function () {
    form.classList.add('show');
    startBtn.style.display = 'none';
  });

  document.getElementById('algorithmQuiz').addEventListener('submit', function(e) {
    e.preventDefault();

    const q1 = e.target.q1.value; // yönlü mü?
    const q2 = e.target.q2.value; // negatif kenar var mı?
    const q3 = e.target.q3.value; // amaç ne?
    const q4 = e.target.q4.value; // graf yoğun mu?
    const q5 = e.target.q5.value; // sıralama gereksinimi?

    let result = '';
    let explanation = '';

    const resultBox = document.getElementById('resultBox');
    const noMatchBox = document.getElementById('noMatchBox');

    resultBox.style.display = 'none';
    noMatchBox.style.display = 'none';

    // --- En kısa yol problemleri ---
    if (q3 === 'shortest') {
      if (q2 === 'yes') {
        result = 'Bellman-Ford';
        explanation = 'Negatif kenar ağırlıkları varsa Dijkstra algoritması çalışmaz. Bellman-Ford algoritması bu durumlar için uygundur.';
      } else {
        result = 'Dijkstra';
        explanation = 'Pozitif kenar ağırlıklı graf için Dijkstra algoritması en kısa yolu bulmada etkilidir.';
      }
    }

    // --- Minimum Spanning Tree (MST) problemleri ---
    else if (q3 === 'mst') {
      if (q1 === 'yes') {
        result = 'Edmonds\' Algorithm';
        explanation = 'Yönlü graflarda MST oluşturmak için klasik algoritmalar (Prim/Kruskal) yetersiz kalır. Edmonds\' algoritması tercih edilir.';
      } else {
        if (q4 === 'yes') {
          if (q5 === 'yes') {
            result = 'Kruskal';
            explanation = 'Sıralama gerekiyorsa ve graf yoğun değilse Kruskal algoritması idealdir.';
          } else {
            result = 'Prim';
            explanation = 'Yoğun graflarda sıralama gerekmeden çalışan Prim algoritması daha etkilidir.';
          }
        } else {
          result = 'Kruskal';
          explanation = 'Seyrek graflarda ve sıralama gereken durumlarda Kruskal algoritması uygundur.';
        }

        // Negatif ağırlık özel durumu
        if (q2 === 'yes') {
          explanation += ' Ayrıca, negatif kenar ağırlıkları MST için sorun oluşturmaz.';
        }
      }
    }

    // --- Sonuç gösterme ---
    if (result !== '') {
      document.getElementById('recommendedAlgo').innerText = result;
      document.getElementById('algoExplanation').innerText = explanation;
      resultBox.style.display = 'block';
    } else {
      noMatchBox.style.display = 'block';
    }
  });
</script>

